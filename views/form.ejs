<head>
    <title>New - Mini Message Board</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="form-page">
    <div class="form-wrapper">
        <form method="POST" action="/new" class="message-form">
            <h1 class="form-title">New Message</h1>

            <% if (errors && errors.length) { %>
                <div class="error-container">
                    <ul class="error-list">
                        <% errors.forEach(err=> { %>
                            <li>
                                <%= err.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <div class="form-group">
                        <label for="newMsg" class="form-label">Message</label>
                        <textarea name="newMsg" id="newMsg" class="form-textarea" placeholder="Enter your message..."
                            maxlength="500" required><%= oldInput?.newMsg || '' %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="newUser" class="form-label">Username</label>
                        <input type="text" name="newUser" id="newUser" class="form-input" placeholder="example123"
                            maxlength="50" value="<%= oldInput?.newUser || '' %>" required />
                    </div>

                    <div class="form-actions">
                        <input type="submit" value="Submit" class="btn btn-submit">
                        <a class="btn btn-cancel" href="/">Cancel</a>
                    </div>
        </form>
    </div>
</body>